if (resume.publications && resume.publications.length)
  .detail#publications
    .icon
      i.fs-lg.icon-newspaper
      span.mobile-title Projects

    .info
      h4.title.text-uppercase Projects

      .content
        ul.list-unstyled
          - each publication in resume.publications
            li.card.card-nested
              .content
                p.clear-margin
                  strong
                    if publication.website
                      a(href=publication.website, target="_blank")= publication.name
                    else
                      |#{publication.name}
                  if (publication.publisher)
                    - var pub = ", " + publication.publisher
                     |#{pub}

                if (publication.releaseDate)
                  p.text-muted
                    small= 'Published on: ' + publication.releaseDate

                p.clear-margin= publication.summary
